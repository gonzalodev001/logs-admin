{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">


    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.mail }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <!--<button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>-->
    <div class="container">
        <h1>Sign In</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="inputMail"><b>Email</b></label>
        <input class="input" type="text" value="{{ last_username }}" placeholder="Enter Email" id="inputMail" name="mail" autocomplete="username" required autofocus>
        {% if error %}
            <div class="error-danger">
                <p><strong>Error! </strong>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}
        <label for="inputPassword"><b>Password</b></label>
        <input class="input" type="password" id="inputPassword" autocomplete="current-password"  placeholder="Enter Password" name="password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <label>
            <input class="input" type="checkbox" checked="checked" id="remember_me" name="_remember_me"  style="margin-bottom:15px"> Remember me
        </label>

        <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

        <div class="clearfix">
            <!--<button type="button" class="cancelbtn">Cancel</button>-->
            <button type="submit" class="button">Sign Up</button>
        </div>
        <div class="pg-container">
            <p>You don't have an account, <a href="{{ path('RegisterUser') }}" style="color:dodgerblue">Register</a>.</p>
        </div>

    </div>
</form>
{% endblock %}
