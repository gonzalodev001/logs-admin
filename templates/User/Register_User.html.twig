{% extends 'base.html.twig' %}

{% block title %}Registro de usuario{% endblock %}

{% block body %}

    <div class="container">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr class=".hr">
        {{ form_start(form) }}
            <label for="email"><b>Email</b></label>
            <!--<input type="text" placeholder="Enter Email" name="email" required>-->
            {% if errors|length > 0 and errors.code_error == 'Existing_User' %}
                <div class="error-danger">
                    <p><strong>Error! </strong>{{ errors.existing_user}}</p>
                </div>
            {% endif %}
            {{ form_widget(form.mail, {'attr': {'class': 'input'}}) }}

            <label for="psw"><b>Password</b></label>
            <!--<input type="password" placeholder="Enter Password" name="psw" required>-->

            {% if errors|length > 0 and errors.code_error == 'invalid_password' %}
                <div class="error-danger">
                    <p><strong>Error! </strong>{{ errors.password }}</p>
                </div>
            {% endif %}
            {{ form_widget(form.password, {'attr': {'class': 'input'}}) }}

            <label for="psw-repeat"><b>Repeat Password</b></label>
            <!--<input type="password" placeholder="Repeat Password" name="psw-repeat" required>-->
            {% if errors|length > 0 and errors.code_error == 'invalid_confirm_password' %}
                <div class="error-danger">
                    <p><strong>Error! </strong>{{ errors.confirm_password }}</p>
                </div>
            {% endif %}
            {{ form_widget(form.confirmPassword, {'attr': {'class': 'input'}}) }}

            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <!--<button type="submit" class="signupbtn">Sign Up</button>-->
                {{ form_row(form.Registrar, {'attr': {'class': 'button'}}) }}
            </div>
            <div class="container signin">
                <p>Already have an account? <a href="{{ path('app_login') }}">Sign in</a>.</p>
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}





